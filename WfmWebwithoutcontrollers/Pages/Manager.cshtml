@page
@model Wfmwithoutcontrollers.Pages.ManagerModel
@{
}

<div class="jumbotron">
    <div class="text-center"><strong>Employees Details</strong></div>
    <table class="table align-middle mb-0 bg-white">
        <thead class="bg-light">
            <tr>
                <th>Employee ID</th>
                <th>Name</th>
                <th>Skills</th>
                <th>Profile</th>
                <th>Experience</th>
                <th>Manager</th>
                <th></th>
            </tr>
        </thead>
        <tbody id="tdata">
        </tbody>
    </table>
</div>

<div class="modal fade" id="Modal" role="dialog">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h6 class="modal-title">Softlock Request Confirmation</h6>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <fieldset>
                    <div class="form-group">
                        <input type="hidden" id="empid"/>
                        <p id="employeeid"></p>
                    </div>
                    <div class="form-group">
                        requestmessage
                        <textarea id="request" name="request" rows="4" cols="50"></textarea>
                    </div>
                    <div class="btn-group">
                        <button type="button" class="btn btn-sm btn-outline-secondary" data-dismiss="modal">Cancel</button>
                        <button type="Submit" class="btn btn-sm btn-outline-primary" onclick="Lockrequest()">Send request</button>
                    </div>
                </fieldset>
            </div>
            <div class="modal-footer">
            </div>
        </div>
    </div>
</div>


<script src="~/js/Employee.js"></script>
