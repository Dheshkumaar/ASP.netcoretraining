@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}


<h4 class="text-center">WFM User Login</h4>
<hr />
<div class="row justify-content-md-center">
    <div class="col-md-5">
        <div class="card">
            <div class="card-body">
                <div class="form-group">
                    <label for="username">UserName</label>
                    <input type="text" class="form-control" placeholder="Enter UserName" id="username" minlength="4" required />
                    <span class="badge badge-danger d-none" id="user">Please Enter the UserName</span>
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" class="form-control" placeholder="Enter Password" id="pwd" minlength="5" required />
                    <span class="badge badge-danger d-none" id="password">Please Enter the Password</span>
                </div>
                <div class="form-group">
                    <input type="submit" id="submit" name="Login" class="btn btn-danger" value="Login" />
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/js/Userlogin.js"></script>