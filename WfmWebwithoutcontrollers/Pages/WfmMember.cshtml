@page
@model Wfmwithoutcontrollers.Pages.WfmMemberModel
@{
}

<div class="jumbotron">
    <div class="text-center"><strong>Employees Request Details</strong></div>
    <table class="table align-middle mb-0 bg-white">
        <thead class="bg-light">
            <tr>
                <th>Employee_id</th>
                <th>Manager</th>
                <th>Request date</th>
                <th>Requestmessage</th>
                <th></th>
            </tr>
        </thead>
        <tbody id="tdata">
        </tbody>
    </table>
</div>

<div class="modal fade" id="Modal" role="dialog">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h6 class="modal-title">Softlock Request Confirmation</h6>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <p>Status update for request Lock</p>
                <fieldset>
                    <input type="hidden" id="lockid" />
                    <input type="hidden" id="empid" />
                    <div class="form-group">
                        <h6>Employee ID:</h6><p id="employee_id"></p>
                    </div>
                    <div class="form-group">
                        <h6>Employee Manager:</h6><p id="manager"></p>
                    </div>
                    <div class="form-group">
                        <h6>Request Message:</h6><p id="requestmessage"></p>
                    </div>
                    <div class="form-group">
                        <h6>Manager Status:</h6>
                        <select id="managerstatus" name="managerstatus">
                            <option>accepted</option>
                            <option>Rejected</option>
                        </select>
                    </div>
                    <div class="btn-group">
                        <button type="button" class="btn btn-sm btn-outline-secondary" data-dismiss="modal">Cancel</button>
                        <button type="Submit" class="btn btn-sm btn-outline-primary" onclick="updaterequest()">Send request</button>
                    </div>
                </fieldset>
            </div>
            <div class="modal-footer">
            </div>
        </div>
    </div>
</div>


<script src="~/js/WfmMember.js"></script>