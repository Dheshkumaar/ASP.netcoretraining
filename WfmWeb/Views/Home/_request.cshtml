@model WfmWeb.Models.Softlocks

<div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
        <div class="modal-header">
            <h6 class="modal-title">Softlock Request Confirmation</h6>
            <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        <div class="modal-body">
            <p>Status update for request Lock</p>
            @using (Html.BeginForm("_Request", "Home", FormMethod.Post))
            {
                <fieldset>
                    @Html.HiddenFor(m => m.lockid, new { @class = "form-control" })
                    <div class="form-group">
                        @Html.HiddenFor(m => m.employee_id, new { @class = "form-control" })
                        <h6>Employee ID:</h6><p>@Model.employee_id</p>
                    </div>
                    <div class="form-group">
                        <h6>Employee Manager:</h6><p>@Model.manager</p>
                    </div>
                    <div class="form-group">
                        <h6>Request Message:</h6><p>@Model.requestmessage</p>
                    </div>
                    <div class="form-group">
                        <h6>Manager Status:</h6>
                        <select id="managerstatus" name="managerstatus">
                            <option>accepted</option>
                            <option>Rejected</option>
                        </select>
                    </div>
                    <div class="btn-group">
                        <button type="button" class="btn btn-sm btn-outline-secondary" data-dismiss="modal">Cancel</button>
                        <button type="Submit" class="btn btn-sm btn-outline-primary">Send request</button>
                    </div>
                </fieldset>
            }
        </div>
        <div class="modal-footer">
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}