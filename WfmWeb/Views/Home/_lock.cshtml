@model WfmWeb.Models.Softlocks


<div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
        <div class="modal-header">
            <h6 class="modal-title">Softlock Request Confirmation</h6>
            <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        <div class="modal-body">
            @using (Html.BeginForm("_lock", "Home", FormMethod.Post))
            {
                <fieldset>
                    <div class="form-group">
                        @Html.HiddenFor(m => m.employee_id, new { @class = "form-control" })
                        <p>Please confirm lock request for Employee @Model.employee_id</p>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.requestmessage)
                        @Html.TextAreaFor(m => m.requestmessage, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.requestmessage, "", new { @class = "badge badge-danger" })
                    </div>
                    <div class="btn-group">
                        <button type="button" class="btn btn-sm btn-outline-secondary" data-dismiss="modal">Cancel</button>
                        <button type="Submit" class="btn btn-sm btn-outline-primary">Send request</button>
                    </div>
                </fieldset>
            }
        </div>
        <div class="modal-footer">
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }